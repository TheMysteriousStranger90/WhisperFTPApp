<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WhisperFTPApp.ViewModels"
             xmlns:global="clr-namespace:WhisperFTPApp.Converters"
             x:DataType="vm:ScanWindowViewModel"
             x:Class="WhisperFTPApp.Views.ScanView">

    <Border Classes="panel" Padding="16">
        <DockPanel>
            <!-- Control Panel -->
            <Border Classes="panel" DockPanel.Dock="Top" Padding="16" Margin="0,0,0,16">
                <StackPanel Spacing="8">
                    <TextBlock Text="WiFi Network Scanner" FontSize="24" FontWeight="SemiBold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding StartScanCommand}"
                                Classes="primary"
                                IsEnabled="{Binding !IsScanning}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{StaticResource RefreshIcon}"/>
                                <TextBlock Text="Start Scan"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding StopScanCommand}"
                                Classes="danger"
                                IsEnabled="{Binding IsScanning}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{StaticResource StopIcon}"/>
                                <TextBlock Text="Stop"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <ProgressBar Value="{Binding ScanProgress}"
                               IsVisible="{Binding IsScanning}"
                               Height="2"
                               Margin="0,8"/>
                </StackPanel>
            </Border>

            <!-- Status Bar -->
            <Border Classes="panel" DockPanel.Dock="Bottom" Padding="8" Margin="0,16,0,0">
                <TextBlock Text="{Binding StatusMessage}"/>
            </Border>

            <!-- Networks Grids -->
            <Grid RowDefinitions="*,*" Margin="0,8">
                <!-- Available Networks -->
                <Border Classes="panel" Grid.Row="0" Margin="0,0,0,8">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" 
                                 Text="Available Networks" 
                                 FontWeight="SemiBold"
                                 Margin="8"/>
                        
                        <DataGrid ItemsSource="{Binding Networks}"
                                AutoGenerateColumns="False"
                                IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="SSID" 
                                                  Binding="{Binding SSID}"
                                                  Width="200"/>
                                <DataGridTextColumn Header="BSSID" 
                                                  Binding="{Binding BSSID}"
                                                  Width="150"/>
                                <DataGridTextColumn Header="Signal" 
                                                  Binding="{Binding SignalStrength}"
                                                  Width="80"/>
                                <DataGridTextColumn Header="Channel" 
                                                  Binding="{Binding Channel}"
                                                  Width="80"/>
                                <DataGridTextColumn Header="Security" 
                                                  Binding="{Binding SecurityType}"
                                                  Width="120"/>
                                <DataGridTextColumn Header="Last Seen" 
                                                  Binding="{Binding LastSeen, StringFormat={}{0:g}}"
                                                  Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>

                <!-- Connected Networks with FTP -->
                <Border Classes="panel" Grid.Row="1" Margin="0,8,0,0">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" 
                                 Text="Connected Networks with FTP Status" 
                                 FontWeight="SemiBold"
                                 Margin="8"/>
                        
                        <DataGrid ItemsSource="{Binding ConnectedNetworks}"
                                AutoGenerateColumns="False"
                                IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="SSID" 
                                                  Binding="{Binding SSID}"
                                                  Width="200"/>
                                <DataGridTextColumn Header="IP Address" 
                                                  Binding="{Binding IpAddress}"
                                                  Width="150"/>
                                <DataGridTemplateColumn Header="FTP Status" 
                                                      Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <Ellipse Width="12" 
                                                         Height="12"
                                                         Fill="{Binding HasOpenFtp, Converter={x:Static global:FtpStatusConverter.Instance}}"/>
                                                <TextBlock Text="{Binding HasOpenFtp}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Security" 
                                                  Binding="{Binding SecurityType}"
                                                  Width="120"/>
                                <DataGridTextColumn Header="Last Connected" 
                                                  Binding="{Binding LastSeen, StringFormat={}{0:g}}"
                                                  Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</UserControl>